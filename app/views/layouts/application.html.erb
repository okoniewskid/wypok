<!DOCTYPE html>
<html>
<head>
  <title>Wypok</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<%= stylesheet_link_tag "/assets/logo.css" %>
	<%= stylesheet_link_tag "/assets/link.css" %>
	<header class="navbar navbar-default" role="navigation">
    <div class="navbar-inner">
      <div class="container" >
        <div id="logo" class="navbar-brand"><%= link_to(image_tag("wypok.png", height: '32', width: '148'), root_path) %></div>
        <nav class="navbar-collapse pull-right"> <!-- collapse  -->
        	<% if user_signed_in? %>
						<ul class="nav nav-pills">
							<li><div><%= link_to '', new_link_path, class: "btn btn-default btn-nav btn-outline btn-circle glyphicon glyphicon-plus", title: "Dodaj link" %></div></li>
							<li><div><%= link_to '', posts_path, class: "btn btn-default btn-nav btn-outline btn-circle glyphicon glyphicon-list", title: "Mikroblog" %></div></li>
              <li><div><%= link_to '', hashtags_path, class: "btn btn-default btn-nav btn-outline btn-circle glyphicon glyphicon-tags", title: "Hasztagi" %></div></li>
              <li><div><%= link_to '', users_path, class: "btn btn-default btn-nav btn-outline btn-circle glyphicon glyphicon-search", title: "Znajdź użytkownika" %></div></li>
							<li><div><%= link_to '', current_user, class: "btn btn-default btn-nav btn-outline btn-circle glyphicon glyphicon-home", title: "Mój profil" %></div></li>
							<li><div><%= link_to '', edit_user_registration_path, class: "btn btn-default btn-nav btn-outline btn-circle glyphicon glyphicon-cog", title: "Zmień ustawienia" %></div></li>
							<li><div><%= link_to '', destroy_user_session_path, :method => :delete , class: "btn btn-default btn-nav btn-outline btn-circle glyphicon glyphicon-log-out", title: "Wyloguj" %></div></li>
						</ul>
					<% else %>
						<ul class="nav nav-pills">
							<li><div><%= link_to '', posts_path, class: "btn btn-default btn-nav btn-outline btn-circle glyphicon glyphicon-list", title: "Mikroblog" %></div></li>
							<li><div><%= link_to '', hashtags_path, class: "btn btn-default btn-nav btn-outline btn-circle glyphicon glyphicon-tags", title: "Hasztagi" %></div></li>
              <li><div><%= link_to '', users_path, class: "btn btn-default btn-nav btn-outline btn-circle glyphicon glyphicon-search", title: "Znajdź użytkownika" %></div></li>
							<li><div><%= link_to '', new_user_registration_path, class: "btn btn-default btn-nav btn-outline btn-circle glyphicon glyphicon-user", title: "Zarejestruj" %></div></li>
							<li><div><%= link_to '', new_user_session_path, class: "btn btn-default btn-nav btn-outline btn-circle glyphicon glyphicon-log-in", title: "Zaloguj" %></div></li>
						</ul>
					<% end %>
        </nav>
      </div>
    </div>
  </header>

	<div id="main_content"> <!-- class="container" -->
		<div class="container">
			<% flash.each do |name, msg| %>
				<%= content_tag(:div, msg, class: "alert alert-info") %>
			<% end %>
		</div>

			<div id="content" class="col-md-9 center-block">
				<%= yield %>
			</div>
		</div>
	</div>
</body>
</html>
