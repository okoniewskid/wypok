<%= stylesheet_link_tag "/assets/link.css" %>
<%= stylesheet_link_tag "/assets/avatar.css" %>
<h1>Hasztagi</h1>
<ul>
<%= form_tag(@link, :method => "get") do %>
  <div class="sort">
    <% if @sn %>
      <button type="submit" class="btn btn-default btn-sort glyphicon glyphicon-arrow-down" name="sortName" value="asc", title="Sortuj rosnąco wg nazwy">Nazwa</button></br>
    <% else %>
      <button type="submit" class="btn btn-default btn-sort glyphicon glyphicon-arrow-up" name="sortName" value="desc", title="Sortuj malejąco wg nazwy">Nazwa</button></br>
    <% end %>
    <% if @sc %>
      <button type="submit" class="btn btn-default btn-sort glyphicon glyphicon-arrow-down" name="sortCount" value="asc", title="Sortuj rosnąco wg ilości">Ilość</button></br>
    <% else %>
      <button type="submit" class="btn btn-default btn-sort glyphicon glyphicon-arrow-up" name="sortCount" value="desc", title="Sortuj malejąco wg ilości">Ilość</button></br>
    <% end %>
  </div>
<% end %>
<div class="ul-wrap">
<% @hashtags.each do |hashtag| %>
    <li><%= link_to hashtag.name, hashtag_path(hashtag.name) %></li>
<% end -%>
</div>
</ul>
