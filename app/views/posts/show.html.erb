<%= link_to '', posts_path, class: "btn btn-default btn-outline fa fa-reply", title: "Powrót do strony z wpisami" %>

<div id="post_content">
  <h1 class="title">
    <%= @post.title %>
  </h1>

  <p class="body">
    <%= @post.body %>
  </p>
  <font size="2">
    <small>Przesłane przez <%= link_to @post.user.name, @post.user %></small>
  </font>

  <div id="post_comments">
    <h3>Dodaj komentarz:</h3>
    <%= render "post_comments/form" %>
  </div>
  <h3><%= @post.post_comments.count %> Komentarzy</h3>
  <div id="comments">
    <%= render :partial => @comments %>
  </div>
</div>