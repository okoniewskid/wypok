<h2>Rejestracja</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


     <div class="form-group">
        <%= f.label "Login" %>
        <%= f.text_field :name, class: "form-control", :autofocus => true, required: true %>
      </div>
      
	  <div class="form-group">
	  	<%= f.label :email %>
	  	<%= f.email_field :email, class: "form-control", required: true %>
	  </div>
	  	  
	  <div class="form-group">
	  	<%= f.label "Avatar" %>
			<%= f.file_field :avatar %>
		</div>

	  <div class="form-group">
	  	<%= f.label "Hasło" %>
	  	<%= f.password_field :password, class: "form-control", required: true, placeholder: "Minimalnie 8 znaków" %>
	  </div>

	  <div class="form-group">
	  	<%= f.label "Potwierdzenie hasła" %>
	  	<%= f.password_field :password_confirmation, class: "form-control", required: true %>
	  </div>

	  <div class="form-group">
	  	<%= f.submit "Zarejestruj", class: "btn btn-lg btn-primary" %>
	  </div>
<% end %>