
<%= link_to '', links_path, class: "btn btn-default btn-outline fa fa-reply", title: "Powrót do strony głównej" %>

<h2>Logowanie</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
  <div class="form-group">
  	<%= f.label :email %>
  	<%= f.email_field :email, autofocus: true, class: "form-control", required: true %>
  </div>

  <div class="form-group">
  	<%= f.label "Hasło" %>
  	<%= f.password_field :password, class: "form-control", required: true %>
  </div>

  <div class="checkbox">
  	<label>
  	<%= f.check_box :remember_me, required: false, as: :boolean if devise_mapping.rememberable? %> Zapamiętaj mnie
		</label>
  </div>

  <div class="form-group">
  	<%= f.submit "Zaloguj", class: "btn btn-primary" %>
  </div>

<% end %>
