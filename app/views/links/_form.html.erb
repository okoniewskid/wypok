<%= form_for(@link) do |f| %>
  <% if @link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
      <% @link.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "Tytuł" %><br>
    <%= f.text_field :title, class: "form-control", required: true %>
  </div>
  
  <div class="form-group">
    <%= f.label "Link" %><br>
    <% if @blokadaURL %>
      <%= f.text_field :url, class: "form-control", readonly: true %>
    <% else %>
      <%= f.text_field :url, class: "form-control", required: true %>
    <% end %>
  </div>
  
  <div class="form-group">
    <%= f.label "Opis" %><br>
    <%= f.text_field :opis, class: "form-control", required: true %>
  </div>
  
  <br>
  <div class="form-group">
    <%= f.submit "Wyślij", class: "btn btn-lg btn-primary" %>
  </div>

<% end %>