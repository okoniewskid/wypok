<%= form_tag(links_path, :method => "get", id: "search-form") do %>
<ul class="nav navbar-nav pull-left">
    <li>
      <div class="input-group">
        <%= text_field_tag :search, params[:search],  class: "form-control", placeholder: "Szukaj" %>
        <span class="input-group-btn">
          <button type="submit" class="btn btn-default btn-outline"><span class="glyphicon glyphicon-search"></span></button>
        </span>
      </div>
    </li>
  </ul>
<% end %>
<% @links.each do |link| %>
<% begin %>
<% @object = LinkThumbnailer.generate(link.url) %> 
  <% @e = false  %>
  <% rescue %>
    <% @e = true %>
  <% end %>
  <div class="link row clearfix">
    <h2>
      <%= link_to link.title, link %><br>
      <% if !@e && @object.images && @object.images.first %>
        <a href="<%= link.url %>" target="_blank" title="<%= link.title %>" ><img src="<%= @object.images.first.src.to_s %>" class="miniaturka" ></a></br>
      <% else %>
        <a href="http://s10.ifotos.pl/img/brakzdjec_sapeppe.gif" target="_blank" title="<%= link.title %>" ><img src="<%= @object.images.first.src.to_s %>" class="miniaturka" ></a></br>
     <% end %>
      <small class="author">Przesłano <%= time_ago_in_words(link.created_at) %> przez <%= link.user.name %></small>
    </h2>

    <div class="btn-group">
      <a class="btn btn-default btn-sm" href="<%= link.url %>", target="_blank">Podgląd</a>
      <%= link_to like_link_path(link), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-chevron-up"></span>
        <%= link.get_upvotes.size %>
      <% end %>
      <%= link_to dislike_link_path(link), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-chevron-down"></span>
        <%= link.get_downvotes.size %>
      <% end %>
    </div>
  </div>
<% end %>